<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- toolbar（actionbar）颜色 -->
        <item name="colorPrimary">@color/primary_color</item>
        <!-- 状态栏颜色 -->
        <item name="colorPrimaryDark">@color/primary_color_dark</item>
        <!-- 各控制元件(如：check box、switch 或是 radoi) 被勾选 (checked) 或是选定 (selected) 的颜色。 -->
        <item name="colorAccent">@color/primary_color_accent</item>
        <!-- 窗口的背景颜色 -->
        <item name="android:windowBackground">@color/background_default_color</item>
        <!-- 设置activity切换动画 -->
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <!--程序初始化, 窗口置为透明-->
        <item name="android:windowNoTitle">true</item>
        <!--沉浸状态栏-->
        <!--Android 8.0适配报错：Only fullscreen opaque activities can request orientation解决方案：-->
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <!-- animation 样式 -->
    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/slide_right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/slide_left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <style name="AppTheme" parent="AppTheme.Base">
        <!--程序初始化, 窗口置为透明-->
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!--沉浸状态栏-->
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CallPhoneTheme" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/callPhoneActivityAnimation</item>
    </style>

    <style name="callPhoneActivityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/dialog_slide_up</item>
        <item name="android:activityOpenExitAnimation">@anim/no_anim</item>
        <item name="android:activityCloseEnterAnimation">@anim/no_anim</item>
        <item name="android:activityCloseExitAnimation">@anim/no_anim</item>
    </style>
</resources>
